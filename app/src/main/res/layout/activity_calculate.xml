<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rx.CalculateActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="200dp"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="match_parent"
                    android:layout_weight="0.7"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:maxLines="5"
                    android:hint="Type Number"
                    android:textSize="34sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp"
                    android:layout_weight="0.3">

                    <TextView
                        android:id="@+id/tv_num_result"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="result"
                        android:maxLines="5"
                        android:textSize="28sp" />
                    <TextView
                        android:id="@+id/tv_num_operator"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="op"
                        android:maxLines="5"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_calc_minus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="-" />

                <Button
                    android:id="@+id/btn_calc_plus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="+" />

                <Button
                    android:id="@+id/btn_calc_multi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="*" />

                <Button
                    android:id="@+id/btn_calc_division"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="/" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_num_07"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="7" />
                <Button
                    android:id="@+id/btn_num_08"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="8" />
                <Button
                    android:id="@+id/btn_num_09"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_num_04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="4" />
                <Button
                    android:id="@+id/btn_num_05"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="5" />
                <Button
                    android:id="@+id/btn_num_06"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_num_01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="1" />
                <Button
                    android:id="@+id/btn_num_02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="2" />
                <Button
                    android:id="@+id/btn_num_03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_calc_c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="C" />
                <Button
                    android:id="@+id/btn_num_00"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="0" />
                <Button
                    android:id="@+id/btn_calc_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.3"
                    android:textSize="48dp"
                    android:text="=" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>